<h2>Be Our Guest</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
    </tr>
  </thead>

  <tbody>
    <% @att_parties.each do |party| %>
      <tr>
        <td><%= link_to party.name, party_path(party.id) %></td>
        <td><%= party.date %></td>
      </tr>
    <% end %>
  </tbody>
</table>

