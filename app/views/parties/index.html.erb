<h2>Play the Host</h2>
<strong><p class="text"><%= link_to 'New Party', new_party_path %><strong></p>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
    </tr>
  </thead>

  <tbody>
    <% @parties.each do |party| %>
      <tr>
        <td><%= link_to party.name, party_path(party.id) %></td>
        <td><%= party.date %></td>
        <td><%= link_to 'Edit', edit_party_path(party) %></td>
        <td><%= link_to 'Delete', party, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</br>