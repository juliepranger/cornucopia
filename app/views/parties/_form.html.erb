<p class="text">
  <%= form_for(@party) do |f| %>
    <% if @party.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@party.errors.count, "error") %> prohibited this party from being saved:</h2>

        <ul>
        <% @party.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.text_field :name, placeholder: "Name" %>
    </div>
    <div class="field">
      <%= f.text_field :date, placeholder: "Date" %>
    </div>
    <div class="field">
      <%= f.text_field :location, placeholder: "Party Address" %>
    </div>
    <div class="field">
      <%= f.text_field :guest_list, placeholder: "Who's invited (e-mail addresses)?" %>
    </div>
    <div class="actions" id="button">
      <%= f.submit %>
    </div>
  <% end %>
</p></br>
