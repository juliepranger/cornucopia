<header>
	<h4 class="headline">Log In</h4>
</header>

<div class="container">

<%= form_for @user, url:"/authentications" do |user| %>

	<p class="form">
		<%= user.label :email, "E-mail" %>
		<%= user.text_field :email %>
	</p>

	<p class="form">
		<%= user.label :password, "Password" %>
		<%= user.password_field :password %>
	</p>

	<p>
		<%= user.submit "Let's Party!" %> 
	</p>

	<% end %>

</div>